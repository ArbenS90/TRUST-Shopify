<section 
  id="announcement-bar-{{ section.id }}" 
  class="
    announcement-bar 
    {{ section.settings.bg_color }} 
    {{ section.settings.bg_gradient }}
    {{ section.settings.text_color }}
    {{ section.settings.border_top_width | prepend: 'border-top-' }}
    {{ section.settings.border_bottom_width | prepend: 'border-bottom-' }}
    {{ section.settings.border_color }} 
    {{ section.settings.font_size }} 
    {{ section.settings.font_size_desktop }} 
    {{ section.settings.text_transform }} 
    {{ section.settings.letter_spacing | prepend: 'ls-' }} 
  "
  style="
    {% if section.settings.custom_bg_color != blank %}
      background-color: {{ section.settings.custom_bg_color }} !important;
    {% endif %}
    {% if section.settings.custom_text_color != blank %}
      color: {{ section.settings.custom_text_color }} !important;
    {% endif %}
    --bs-bg-opacity: {{ section.settings.bg_opacity | append: '%' }};
    --bs-border-opacity: {{ section.settings.border_opacity | append: '%' }};
  ">
  <div class="announcement-marquee-wrapper overflow-hidden">
    <div 
      class="announcement-marquee d-flex align-items-center {{ section.settings.pt | prepend: 'pt-' }} {{ section.settings.pb | prepend: 'pb-' }}"
      style="
        animation-duration: {{ section.settings.marquee_speed | append: 's' }};
        {% if section.settings.custom_text_color != blank %}
          color: {{ section.settings.custom_text_color }} !important;
        {% endif %}
      "
      aria-label="{{ 'general.accessibility.announcements' | t }}">
      {% for block in section.blocks %}
        <div class="announcement-marquee-item flex-shrink-0 px-4" {{ block.shopify_attributes }}>
          <span class="description rte lh-sm">
            {{ block.settings.announcement }}
          </span>
          {% unless forloop.last %}<span class="px-4">•</span>{% endunless %}
        </div>
      {% endfor %}
      {% for block in section.blocks %}
        <div class="announcement-marquee-item flex-shrink-0 px-4">
          <span class="description rte lh-sm">
            {{ block.settings.announcement }}
          </span>
          {% unless forloop.last %}<span class="px-4">•</span>{% endunless %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "color",
      "id": "custom_bg_color",
      "label": "Color de fondo personalizado",
      "info": "Deja vacío para usar los colores por defecto"
    },
    {
      "type": "color",
      "id": "custom_text_color",
      "label": "Color de texto personalizado",
      "info": "Deja vacío para usar los colores por defecto"
    },
    {
      "type": "select",
      "id": "bg_color",
      "label": "Background color (si no usas color personalizado)",
      "default": "bg-body",
      "options": [
        { "value": "bg-primary", "label": "Primary" },
        { "value": "bg-secondary", "label": "Secondary" },
        { "value": "bg-body", "label": "Body" },
        { "value": "bg-white", "label": "White" }
      ]
    },
    {
      "type": "range",
      "id": "bg_opacity",
      "label": "Background opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "bg_gradient",
      "label": "Background gradient",
      "options": [
        { "value": "bg-gradient", "label": "Yes" },
        { "value": "", "label": "No" }
      ],
      "default": ""
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color (si no usas color personalizado)",
      "default": "text-body",
      "options": [
        { "value": "text-primary", "label": "Primary" },
        { "value": "text-secondary", "label": "Secondary" },
        { "value": "text-body", "label": "Body" },
        { "value": "text-white", "label": "White" }
      ]
    },
    {
      "type": "range",
      "id": "border_top_width",
      "label": "Border top width",
      "default": 0,
      "min": 0,
      "max": 16,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "border_bottom_width",
      "label": "Border bottom width",
      "default": 0,
      "min": 0,
      "max": 16,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "border_color",
      "label": "Border color",
      "default": "border-body",
      "options": [
        { "value": "border-primary", "label": "Primary" },
        { "value": "border-secondary", "label": "Secondary" },
        { "value": "border-body", "label": "Body" },
        { "value": "border-white", "label": "White" }
      ]
    },
    {
      "type": "range",
      "id": "border_opacity",
      "label": "Border opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "text",
      "id": "container_max_width",
      "label": "Container max-width (px)",
      "info": "Leave empty to use the global container width",
      "default": "600"
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "Font size - mobile",
      "default": "fs-sm",
      "options": [
        { "value": "fs-xs", "label": "xs" },
        { "value": "fs-sm", "label": "sm" },
        { "value": "fs-md", "label": "md" },
        { "value": "fs-lg", "label": "lg" },
        { "value": "fs-xl", "label": "xl" }
      ]
    },
    {
      "type": "select",
      "id": "font_size_desktop",
      "label": "Font size - desktop",
      "default": "fs-desktop-sm",
      "options": [
        { "value": "fs-desktop-xs", "label": "xs" },
        { "value": "fs-desktop-sm", "label": "sm" },
        { "value": "fs-desktop-md", "label": "md" },
        { "value": "fs-desktop-lg", "label": "lg" },
        { "value": "fs-desktop-xl", "label": "xl" }
      ]
    },
    {
      "type": "select",
      "id": "text_transform",
      "label": "Text transform",
      "default": "text-capitalize",
      "options": [
          { "value": "", "label": "Normal" },
          { "value": "text-capitalize", "label": "Capitalize" },
          { "value": "text-lowercase", "label": "Lowercase" },
          { "value": "text-uppercase", "label": "Uppercase" }

      ]
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "label": "Letter spacing",
      "default": 0,
      "min": 0,
      "max": 5
    },
    {
      "type": "header",
      "content": "Marquee (Carrusel Infinito)"
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "Velocidad del marquee",
      "min": 10,
      "max": 60,
      "default": 30,
      "step": 1,
      "unit": "seg",
      "info": "Tiempo para completar un ciclo completo"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "pt",
      "label": "Top",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "pb",
      "label": "Padding bottom",
      "min": 0,
      "max": 20,
      "step": 1,
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "announcement",
          "label": "Announcement",
          "default": "Announce something important here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement bar",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "announcement": "Announce something important here"
          }
        },
        {
          "type": "slide",
          "settings": {
            "announcement": "Free shipping over $100 USD"
          }
        }
      ]
    }
  ]
}
{% endschema %}